<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHighGrey">

    <LinearLayout
        android:id="@+id/ll_actionbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:background="@color/color40Blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:onClick="SettingOnClick"
            android:src="@mipmap/backwhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="设置"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_actionbar"
        android:src="@drawable/line1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/iv_line"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_personinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="SettingOnClick"
            android:text="编辑资料"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cd_0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="SettingOnClick"
            android:text="编辑个签"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cd_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/et_p1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:onClick="SettingOnClick"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cd_2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/et_p2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:onClick="SettingOnClick"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cd_3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="提交"
            android:onClick="SettingOnClick"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cd_4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        android:onClick="SettingOnClick"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_updatapwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="SettingOnClick"
            android:text="修改密码"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cd_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:onClick="SettingOnClick"
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/tv_checkupdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="SettingOnClick"
                android:text="检查更新"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            android:id="@+id/cd_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:onClick="SettingOnClick"
            app:cardCornerRadius="4dp"
            >

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="SettingOnClick"
                android:text="关于论坛"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>